<h1>ジャンル一覧・新規登録</h1>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
<%= f.text_field :name, class: 'form-control', required: true %>
<%= f.hidden_field :admin_id, :value => current_admin.id %>
<%= f.submit "新規登録", class:"btn btn-success" %>
<% end %>
<table class = "table">
    <% @genres.each do |genre| %>
    <tr>
      <th><%= genre.name %></th>
      <th><%= link_to "編集",edit_admin_genre_path(genre.id),class: "btn btn-success" %></th>
      <th><%= link_to "削除",admin_genre_path(genre.id), class: "btn btn-danger", method: :delete %></th>
    </tr>
    <% end %>
</table>