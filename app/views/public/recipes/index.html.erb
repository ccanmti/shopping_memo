<h1>レシピ一覧</h1>
<table class = "table">
<%= link_to "レシピの新規登録", new_recipe_path %>
<% @recipes.each do |recipe|%>
<tr>
<th><%= recipe.name %></th>
<th>
<%= form_with model: @memo, url: memos_path,method: :post do |f| %>
<% f.hidden_field :recipe_id, :value => 1 %>
<%= f.submit "追加", class:"btn btn-success"%>
<% end %>
</th>
</tr>
<% end %>
</table>